/* components/search/search.wxss */
.container{
  display: flex;
  margin-left: 20rpx;
  align-items: center;
  position: relative;
}
.bar{
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}
.search{
  background: #d43c33;
  color: #fff;
  margin-left: 20rpx;
  font-size: 30rpx;
  width: 108rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  border-radius: 30rpx;
}
.icon{
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}
