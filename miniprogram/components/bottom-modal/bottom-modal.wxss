/* components/bottom-modal/bottom-modal.wxss */
.modal{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
}
.panel{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background-color: #f8f8f8;
}
.iconfont{
  position: absolute;
  padding: 20rpx;
  top: 10rpx;
  right: 10rpx;
}